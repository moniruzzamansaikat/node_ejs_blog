<form action="/posts/edit" method="POST">
  <input type="hidden" name="post_id" value="<%= post._id %>" />
  <div class="card my-4">
    <div class="p-3">
      <input
        type="text"
        name="title"
        style="font-size: 2.2rem; border: 0; outline: 0; font-weight: 900; width: 100%; background-color: #fff"
        value="<%= post.title %>"
      />
    </div>
    <div class="p-3">
      <input
        data-role="tagsinput"
        type="text"
        name="tags"
        style="font-size: 1rem; border: 0; outline: 0"
        value="<%= post.tags %>"
      />
    </div>
    <textarea id="create_post_editor" name="post_body">
      <%= post.post_body %>
    </textarea>
  </div>

  <div class="mb-4">
    <button class="btn btn-primary">Save</button>
  </div>
</form>
